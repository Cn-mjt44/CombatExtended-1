<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- === Remove shield as apparel requirement -->
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/PawnKindDef[defName="VFEM2_ManAtArms"]/apparelRequired/li[.="VFEM2_Shield_Heater"]</xpath>
	</Operation>

	<!-- === Give Shield === -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_ManAtArms"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<shieldMoney>
					<min>200</min>
					<max>600</max>
				</shieldMoney>
				<shieldTags>
					<li>VFEM2_Shield_Heater</li>
				</shieldTags>
				<shieldChance>0.9</shieldChance>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Knight" or defName="VFEM2_Lord"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<shieldMoney>
					<min>200</min>
					<max>600</max>
				</shieldMoney>
				<shieldTags>
					<li>VFEM2_Shield_Heater</li>
				</shieldTags>
				<shieldChance>0.5</shieldChance>
			</li>
		</value>
	</Operation>

	<!-- === Give ammo to Crossbowman === -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Crossbowman"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>12</min>
					<max>20</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>100</min>
						<max>200</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<!-- === Give ammo to Handgunner === -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Handgunner"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>12</min>
					<max>20</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>100</min>
						<max>200</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<!-- === Give ammo to Archers === -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Archer" or defName="VFEM2_Hunter"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>15</min>
					<max>30</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>50</min>
						<max>150</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<!-- === Give ammo to Heavy archers === -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Guildmaster" or defName="VFEM2_HeavyArcher"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>12</min>
					<max>20</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>50</min>
						<max>150</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[
			defName="VFEM2_Crossbowman" or
			defName="VFEM2_Handgunner" or
			defName="VFEM2_Archer" or
			defName="VFEM2_Hunter" or
			defName="VFEM2_Guildmaster" or
			defName="VFEM2_HeavyArcher"]/apparelRequired</xpath>
		<value>
			<li>CE_Apparel_TribalBackpack</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="VFEM2_Crossbowman"]/weaponTags</xpath>
		<value>
			<li>CE_XBow</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[
			defName="VFEM2_Archer" or 
			defName="VFEM2_Hunter" or 
			defName="VFEM2_Guildmaster" or 
			defName="VFEM2_HeavyArcher"]/weaponTags</xpath>
		<value>
			<li>CE_Bow</li>
		</value>
	</Operation>

</Patch>